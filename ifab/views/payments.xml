<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_payment_document_mx_2" inherit_id="l10n_mx_edi.report_payment_document_mx">
              <xpath expr="//div[contains(@class, 'row mt64')]" position="replace">
                  <div class="col-xs-6" t-if="o.l10n_mx_edi_cfdi_uuid and o.l10n_mx_edi_payment_method_id">
                      <h4><strong><font color="gray">Emitter</font></strong></h4>
                      <strong><span t-esc="xml.Emisor.get('Nombre')"/></strong><br/>
                      <span><strong>VAT: </strong><span t-esc="xml.Emisor.get('Rfc')"/></span>
                      <span><strong>Fiscal Regime: </strong>
                            <t t-if="xml.get('version', '') == '3.2'"> <span t-esc="xml.Emisor.RegimenFiscal.get('Regimen')"/></t>
                            <t t-if="xml.get('Version', '') == '3.3'"> <span t-esc="xml.Emisor.get('RegimenFiscal', '')"/></t></span>
                      <span><br/><strong>Expedition place: </strong></span> <span t-esc="xml.get('LugarExpedicion')"/>
                      <t t-set="pay" t-value="o.l10n_mx_edi_get_pay_etree(xml)"/>
                      <span><strong>Payment Date: </strong><span t-esc="pay.get('FechaPago', '').replace('T12:00:00', ' ')"/></span><br/>
                      <strong>Payment Way CFDI: </strong><span t-esc="'  '.join([' ', pay.get('FormaDePagoP')])"/><br/>
                      <strong>Amount: </strong><span t-esc="'{0:,.2f}'.format(float(pay.get('Monto')))"/><span t-esc="'  '.join([' ', pay.get('MonedaP')])"/><br/>
                      <strong>Operation: </strong><span t-esc="pay.get('NumOperacion')"/><br/>
                  </div>
                  <div class="col-xs-6" t-if="o.l10n_mx_edi_cfdi_uuid">
                      <h4><strong><font color="gray">Receiver</font></strong></h4>
                      <strong><span t-esc="xml.Receptor.get('Nombre')"/></strong><br/>
                      <span><strong>VAT: </strong><span t-esc="xml.Receptor.get('Rfc')"/></span>
                      <span><strong>CFDI Use: </strong><span t-esc="xml.Receptor.get('UsoCFDI')"/></span>
                  </div>
              </xpath>
              <xpath expr="//div[contains(@class, 'row')]" position="replace">
                  <div class="col-xs-6" t-if="o.l10n_mx_edi_cfdi_uuid and o.l10n_mx_edi_payment_method_id">
                      <span><strong>Emitter certificate:</strong></span> <span t-esc="xml.get('NoCertificado')"/><br/>
                      <span><strong>Emission Date:</strong></span> <span t-esc="xml.get('Fecha', '').replace('T', ' ')"/><br/>
                      <span><strong>Certification Date:</strong></span> <span t-esc="tfd.get('FechaTimbrado', '').replace('T', ' ')"/><br/>
                      <span><strong>Fiscal Folio:</strong></span> <span t-esc="tfd.get('UUID')"/><br/>
                  </div>
              </xpath>
              <xpath expr="//div[contains(@class, 'row mb64')]" position="replace">
                              <div class="row mb64">

                              </div>
              </xpath>
         <xpath expr="//table" position="replace">
            <t t-if="o.l10n_mx_edi_cfdi_uuid">
                <t t-set="docs_related" t-value="o.l10n_mx_edi_get_payment_etree(xml)"/>
                <!-- Section to bank accounts-->
                <t t-set="vat_em" t-value="docs_related[0].getparent().get('RfcEmisorCtaOrd', '') if docs_related else ''"/>
                <t t-set="bank_em" t-value="docs_related[0].getparent().get('NomBancoOrdExt', '') if docs_related else ''"/>
                <t t-set="acc_em" t-value="docs_related[0].getparent().get('CtaOrdenante', '') if docs_related else ''"/>
                <t t-set="vat_re" t-value="docs_related[0].getparent().get('RfcEmisorCtaBen', '') if docs_related else ''"/>
                <t t-set="acc_re" t-value="docs_related[0].getparent().get('CtaBeneficiario', '') if docs_related else ''"/>
                <table class="table table-condensed" t-if="acc_em or acc_re">
                    <thead>
                        <tr>
                            <th t-if="vat_em"><t t-esc="o.company_id.country_id.vat_label or 'VAT'"/> Emitter Acc. Ord.</th>
                            <th t-if="bank_em">Bank Name Acc. Ord.</th>
                            <th t-if="acc_em">Account Ord.</th>
                            <th t-if="vat_re"><t t-esc="o.company_id.country_id.vat_label or 'VAT'"/> Emitter Acc. Ben.</th>
                            <th t-if="acc_re">Account Ben.</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td t-if="vat_em"><span t-esc="vat_em"/></td>
                            <td t-if="bank_em"><span t-esc="bank_em"/></td>
                            <td t-if="acc_em"><span t-esc="acc_em"/></td>
                            <td t-if="vat_re"><span t-esc="vat_re"/></td>
                            <td t-if="acc_re"><span t-esc="acc_re"/></td>
                        </tr>
                    </tbody>
                </table>
                <!-- Finish section to bank accounts-->
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Invoice</th>
                            <th>UUID</th>
                            <th>Way</th>
                            <th>Partiality</th>
                            <th class="text-right">Previous balance</th>
                            <th class="text-right">Amount Paid</th>
                            <th class="text-right">Balance</th>
                            <th>Currency</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs_related" t-as="inv">
                            <td><span t-esc="o.invoice_ids.filtered(lambda i: i.l10n_mx_edi_cfdi_uuid == inv.get('IdDocumento')).number or ''"/></td>
                            <td><span t-esc="inv.get('IdDocumento')"/></td>
                            <td><span t-esc="inv.get('MetodoDePagoDR', '')"/></td>
                            <td><span t-esc="inv.get('NumParcialidad', '')"/></td>
                            <td class="text-right"><span t-esc="'{0:,.2f}'.format(float(inv.get('ImpSaldoAnt')))"/></td>
                            <td class="text-right"><span t-esc="'{0:,.2f}'.format(float(inv.get('ImpPagado')))"/></td>
                            <td class="text-right"><span t-esc="'{0:,.2f}'.format(float(inv.get('ImpSaldoInsoluto')))"/></td>
                            <td><span t-esc="inv.get('MonedaDR')"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>
            <t t-if="not o.l10n_mx_edi_cfdi_uuid">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Invoice Date</th>
                            <th>Invoice Number</th>
                            <th class="text-right">Original Amount</th>
                            <th class="text-right">Amount Paid</th>
                            <th class="text-right">Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.invoice_ids" t-as="inv">
                            <td><span t-field="inv.date_invoice"/></td>
                            <td><span t-field="inv.number"/></td>
                            <td class="text-right"><span t-field="inv.amount_total"/></td>
                            <td class="text-right"><span t-esc="inv.amount_total - inv.residual" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></td>
                            <td class="text-right"><span t-field="inv.residual"/></td>
                        </tr>
                    </tbody>
                </table>
            </t>
        </xpath>       
    </template>
</odoo>
